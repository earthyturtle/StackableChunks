<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- ========== Patch - make chunks stackable ========== -->
    
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[@Name = "ChunkBase"]/stackLimit</xpath>
        <value>
            <stackLimit>10</stackLimit>
            <drawGUIOverlay>true</drawGUIOverlay>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>/Defs/ThingDef[@Name = "ChunkBase"]/thingClass</xpath>
        <value>
            <thingClass>StackableChunks.Chunk</thingClass>
        </value>
    </Operation>
    
    <Operation Class="PatchOperationRemove">
        <xpath>/Defs/ThingDef[@Name = "ChunkBase"]/passability</xpath>
    </Operation>

    <!-- === Code for 'Stackable Chunks!' by EarthyTurtle. === -->
    <!-- === This label is actually just so I don't accidently place anything after the Patch tag. :P === -->
</Patch>
